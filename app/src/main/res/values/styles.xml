<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GameButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/purple_100</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceOverlay</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">0dp</item>
        <item name="behavior_hideable">true</item>
        <item name="behavior_fitToContents">true</item>
    </style>

    <style name="CustomShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Стили для мемориалов -->
    <style name="MemorialCardStyle">
        <item name="android:layout_margin">@dimen/memorial_card_margin</item>
        <item name="cardCornerRadius">@dimen/memorial_card_radius</item>
        <item name="cardElevation">@dimen/memorial_card_elevation</item>
        <item name="strokeWidth">@dimen/card_stroke_width</item>
        <item name="strokeColor">@color/memorial_card_stroke</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MemorialNameTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/memorial_text_dark</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MemorialDatesTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/memorial_text_muted</item>
    </style>

    <style name="MemorialLocationTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/memorial_text_muted</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="MemorialIndicatorTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/memorial_text_dark</item>
        <item name="android:paddingLeft">@dimen/memorial_indicator_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/memorial_indicator_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/memorial_indicator_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/memorial_indicator_padding_vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MemorialWarningTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/memorial_moderation</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources> 