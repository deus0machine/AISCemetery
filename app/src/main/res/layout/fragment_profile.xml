<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Данные профиля -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Имя пользователя"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Контакты пользователя" />

    <TextView
        android:id="@+id/profile_reg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата регистрации" />

    <!-- Кнопка загрузки заказов -->
    <Button
        android:id="@+id/btn_load_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузить заказы"
        android:layout_marginTop="16dp" />

    <!-- RecyclerView для заказов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_order_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp" />
</LinearLayout>
