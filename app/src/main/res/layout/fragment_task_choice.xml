<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="У вас уже есть захоронение?"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:fontFamily="@font/"
        android:gravity="center"
        android:textStyle="bold"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_grave_exists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Захоронение уже есть"
        android:layout_below="@id/title"
        android:layout_marginBottom="18dp"
        app:cornerRadius="18dp"
        app:icon="@drawable/memorial"
        app:iconSize="50dp"
        app:iconGravity="textStart"
        app:iconPadding="18dp"
        android:textSize="18sp"
        android:backgroundTint="@color/purple_300"
        android:textColor="@android:color/white"
        android:padding="18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_no_grave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создать захоронение"
        app:cornerRadius="18dp"
        android:layout_below="@id/btn_grave_exists"
        android:textSize="18sp"
        app:icon="@drawable/add"
        app:iconSize="50dp"
        app:iconGravity="textStart"
        app:iconPadding="18dp"
        android:backgroundTint="@color/purple_200"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="32dp"/>
</RelativeLayout>
