<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidx="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp">

    <!-- CardView с тенью -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

    <!-- Внутренний LinearLayout с содержимым -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/grey">

        <!-- Фотография -->
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="Фото захоронения"

            android:elevation="4dp"
            android:layout_marginBottom="8dp"/>

        <!-- ФИО -->
        <TextView
            android:id="@+id/tv_fio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ФИО"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_black"
            android:layout_marginBottom="4dp" />

        <!-- Даты рождения и смерти -->
        <TextView
            android:id="@+id/tv_birth_death_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата рождения - Дата смерти"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:fontFamily="@font/roboto_black"
            android:layout_marginBottom="8dp" />

        <!-- Биография -->
        <TextView
            android:id="@+id/tv_biography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Биография"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_black"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>

    </LinearLayout>
