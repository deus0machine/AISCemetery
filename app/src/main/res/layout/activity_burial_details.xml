<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Toolbar с кастомной иконкой -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:titleTextColor="@android:color/white"
        app:title="Вернуться назад"

        android:contentDescription="Back">


</com.google.android.material.appbar.MaterialToolbar>
    <ImageView
        android:id="@+id/image_burial"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:src="@drawable/amogus" />
    <!-- Описание захоронения -->
<TextView
android:id="@+id/text_burial_details"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Информация о захоронении"
android:textSize="18sp"
android:textStyle="bold"
android:layout_marginTop="16dp"
android:textColor="@android:color/black" />

    <!-- Кнопка редактирования с улучшенным стилем -->
<Button
android:id="@+id/button_edit_burial"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Редактировать"
android:textColor="@android:color/white"
android:backgroundTint="?attr/colorPrimary"
android:layout_marginTop="16dp"
android:padding="12dp"
android:textSize="16sp"
android:layout_gravity="center"/>


<Button
    android:id="@+id/button_delete_burial"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Удалить"
    android:textColor="@android:color/white"
    android:backgroundTint="@android:color/holo_red_light"
    android:layout_marginTop="8dp"
    android:padding="12dp"
    android:textSize="16sp"
    android:layout_gravity="center"/>

    </LinearLayout>
